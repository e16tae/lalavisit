# ================================
# LALAVISIT Environment Configuration
# ================================
# Copy this file to .env.local and fill in your values
# For production, configure in Vercel/deployment platform

# ================================
# Application Identity
# ================================
PROJECT_NAME=lalavisit
APP_NAME=lalavisit

# ================================
# Domain Configuration
# ================================
# Primary domain (e.g., www.example.com)
NEXT_PUBLIC_SITE_URL=https://www.example.com

# Apex domain (e.g., example.com)
APEX_DOMAIN=example.com

# ================================
# Business Contact Information
# ================================
# Email address
CONTACT_EMAIL=contact@example.com
CERT_EMAIL=contact@example.com

# Phone numbers
CENTER_PHONE=02-000-0000
CENTER_PHONE_E164=+82-2-000-0000
MOBILE_PHONE=010-0000-0000
FAX_NUMBER=02-000-0001
FAX_NUMBER_E164=+82-2-000-0001

# ================================
# Business Registration
# ================================
# Owner/Director name
OWNER_NAME=홍길동

# Business registration number
BUSINESS_REGISTRATION_NUMBER=000-00-00000

# Institution code
INSTITUTION_CODE=0-00000-00000

# ================================
# Location Information
# ================================
# Street address
STREET_ADDRESS=서울특별시 예시구 예시로 123 4층

# Postal code
POSTAL_CODE=00000

# City/District
CITY=서울
DISTRICT=예시구
LOCALITY=예시동

# GPS Coordinates
LATITUDE=37.5665
LONGITUDE=126.9780

# ================================
# SMTP Configuration (Naver)
# ================================
# SMTP server
SMTP_HOST=smtp.naver.com
SMTP_PORT=587

# SMTP credentials
EMAIL_USER=contact@example.com
EMAIL_PASSWORD=CHANGE_ME_NAVER_PASSWORD

# ================================
# External Service IDs
# ================================
# KakaoTalk Channel ID
NEXT_PUBLIC_KAKAO_CHANNEL_ID=_PLACEHOLDER

# Naver Map Place ID
NAVER_MAP_PLACE_ID=0000000000

# Google Analytics
NEXT_PUBLIC_GA_ID=

# ================================
# SEO Verification Codes
# ================================
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_NAVER_SITE_VERIFICATION=

# ================================
# GitHub Container Registry
# ================================
CONTAINER_REGISTRY=ghcr.io
GITHUB_ORG=YOUR_GITHUB_USERNAME
GITHUB_REPO=lalavisit

# Container image name
IMAGE_NAME=lalavisit-frontend
FULL_IMAGE_NAME=${CONTAINER_REGISTRY}/${GITHUB_ORG}/${IMAGE_NAME}

# ================================
# Kubernetes Configuration
# ================================
# Kubernetes namespace
K8S_NAMESPACE=lalavisit

# Resource names
DEPLOYMENT_NAME=lalavisit-frontend
SERVICE_NAME=lalavisit-frontend
INGRESS_NAME=lalavisit-ingress
APEX_REDIRECT_NAME=lalavisit-apex-redirect

# Secret names
SECRET_NAME=lalavisit-secrets
TLS_SECRET_NAME=lalavisit-tls

# Kong plugin names
RATE_LIMIT_PLUGIN_NAME=rate-limiting-lalavisit

# ================================
# ArgoCD Configuration
# ================================
# ArgoCD application names
ARGOCD_PROD_APP_NAME=lalavisit-production
ARGOCD_DEV_APP_NAME=lalavisit-dev

# Git repository URL
ARGOCD_REPO_URL=https://github.com/${GITHUB_ORG}/${GITHUB_REPO}.git

# ================================
# Deployment Configuration
# ================================
# Environment
ENVIRONMENT=production

# ================================
# Full URLs (Computed)
# ================================
# These can be derived from the above but listed for clarity
KAKAO_CHANNEL_URL=https://pf.kakao.com/${NEXT_PUBLIC_KAKAO_CHANNEL_ID}/chat
NAVER_MAP_URL=https://map.naver.com/p/entry/place/${NAVER_MAP_PLACE_ID}?c=15.00,0,0,0,dh

# ================================
# Notes
# ================================
# 1. For Next.js, use NEXT_PUBLIC_ prefix for client-side variables
# 2. Never commit .env.local with real credentials to git
# 3. Update business information when details change
# 4. SMTP credentials are sensitive - store securely
# 5. For production deployment:
#    - Use Vercel environment variables
#    - Or use Kubernetes secrets for K8s deployment
# 6. Test contact form after changing SMTP credentials
# 7. Verify map integration after changing NAVER_MAP_PLACE_ID
# 8. Update SEO verification codes from Google/Naver webmaster tools
