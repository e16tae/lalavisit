# =============================
# GitHub Secrets Template
# =============================
# These values are injected during the GitHub Actions build step
# (see .github/workflows/cd-production.yaml)

# Public site URL used for metadata and sitemap
NEXT_PUBLIC_SITE_URL=https://www.example.com

# Kakao 채널 ID (예: _ABCD1234)
NEXT_PUBLIC_KAKAO_CHANNEL_ID=_PLACEHOLDER

# 검색엔진 소유권(선택)
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=
NEXT_PUBLIC_NAVER_SITE_VERIFICATION=

# =============================
# Kubernetes Sealed Secret Template
# =============================
# Copy these into an env file (예: .env.production) and run
#   ./scripts/seal-secrets.sh --env-file .env.production --name lalavisit-secrets
# to generate k8s/sealed-secrets/lalavisit-secrets.sealedsecret.yaml

EMAIL_USER=contact@example.com
EMAIL_PASSWORD=CHANGE_ME_APP_PASSWORD
SMTP_HOST=smtp.naver.com
SMTP_PORT=587
CONTACT_EMAIL=contact@example.com
